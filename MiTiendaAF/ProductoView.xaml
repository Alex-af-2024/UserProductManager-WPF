<Window x:Class="MiTiendaAF.ProductoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiTiendaAF"
        mc:Ignorable="d"
        Title="ProductoView" Height="450" Width="800"
        MaxHeight="450" MaxWidth="800" 
        MinHeight="450" MinWidth="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Background="#FF8DA4E8">
            <!--Eliminé de momento txtChanged por que sale error de compilado. Se deben declarar en .cs y sirve para acciones a tiempo real de los txt-->
            <Label x:Name="lblCodigo" Content="Codigo" HorizontalAlignment="Left" Margin="25,56,0,0" VerticalAlignment="Top" Height="25" Width="111"/>
            <TextBox x:Name="txtCodigo" HorizontalAlignment="Left" Margin="157,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Height="25" />
            <!--TextChanged="txtNombre_TextChanged"-->
            <Label x:Name="lblNombreProducto" Content="Nombre" HorizontalAlignment="Left" Margin="25,103,0,0" VerticalAlignment="Top" Height="25" Width="111"/>
            <TextBox x:Name="txtNombreRepuesto" HorizontalAlignment="Left" Margin="157,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Height="25" />
            <!--TextChanged="txtUsuario_TextChanged"-->
            <Label x:Name="lblPrecio" Content="Precio" HorizontalAlignment="Left" Margin="25,153,0,0" VerticalAlignment="Top" Height="25" Width="111"/>
            <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Margin="157,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Height="25" />
            <!--TextChanged="txtContraseña_TextChanged"-->
            <Label x:Name="lblProductoPorCodigo" Content="Buscar producto por código" HorizontalAlignment="Left" Margin="471,56,0,0" VerticalAlignment="Top" Height="24" Width="184"/>
            <TextBox x:Name="txtBuscarPorUserName" HorizontalAlignment="Left" Margin="471,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Height="25" />
            <!--TextChanged="txtBuscarPorUserName_TextChanged-->
            <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="25,261,0,0" VerticalAlignment="Top" Height="29" Width="78" Background="#FF97ED44" Click="btnAgregar_Click"/>
            <Button x:Name="btnActualizar" Content="Actualizar" HorizontalAlignment="Left" Margin="228,261,0,0" VerticalAlignment="Top" Height="29" Width="78" Background="#FFF76565" Click="btnActualizar_Click"/>
            <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="126,261,0,0" VerticalAlignment="Top" Height="29" Width="78" Background="#FFF7F90D" Click="btnEliminar_Click"/>
            <Button x:Name="btnBuscarPorUserName" Content="Buscar" HorizontalAlignment="Left" Margin="669,78,0,0" VerticalAlignment="Top" Height="40" Width="78" RenderTransformOrigin="0.513,0.526" Background="#FF25F99D" Click="btnBuscarPorUserName_Click"/>
            <Button x:Name="btnListarProductos" Content="Listar" HorizontalAlignment="Left" Margin="201,338,0,0" VerticalAlignment="Top" Height="49" Width="98" Background="#FFB662FF" Click="btnListar_Click"/>
            <ListBox x:Name="listproductos" Margin="346,261,22,20"/>
            <Label x:Name="lblVentanaProductos" Content="Ventana Productos" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Height="31" Width="158"/>
            <Label x:Name="lblStock" Content="Stock" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Center" Height="25" Width="111"/>
            <TextBox x:Name="txtStock" HorizontalAlignment="Left" Margin="157,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="142" Height="25" />
            <Button x:Name="btnProIrHome" Content="Ir a Home" HorizontalAlignment="Left" Margin="638,10,0,0" VerticalAlignment="Top" Height="34" Width="109" Click="btnProIrHome_Click"/>

        </Grid>

    </Grid>
</Window>
